@model WebApp.ViewModels.PaymentCreateEditViewModel

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-group">
    <label asp-for="Payment.BillId" class="control-label"></label>
    <select asp-for="Payment.BillId" class="form-control" asp-items="Model.BillSelectList"></select>
</div>
<div class="form-group">
    <label asp-for="Payment.PaymentMethodId" class="control-label"></label>
    <select asp-for="Payment.PaymentMethodId" class="form-control" asp-items="Model.PaymentMethodSelectList"></select>
</div>
<div class="form-group">
    <label asp-for="Payment.Sum" class="control-label"></label>
    <input asp-for="Payment.Sum" class="form-control"/>
    <span asp-validation-for="Payment.Sum" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Payment.PaymentTime" class="control-label"></label>
    <input asp-for="Payment.PaymentTime" class="form-control"/>
    <span asp-validation-for="Payment.PaymentTime" class="text-danger"></span>
</div>
<div class="form-group">
    <input type="submit" value="@Resources.Views.Common.Save" class="btn btn-primary"/>
</div>