@model WebApp.Areas.Admin.ViewModels.AppUserCreateEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>@Resources.Views.Common.Edit</h1>

<h4>@Resources.Domain.AppUser.AppUserString</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="AppUser.Id" />

            <partial name="PartialCreateEdit" model="Model"/>
            
            <div class="form-group">
                <input type="submit" value="@Resources.Views.Common.Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Resources.Views.Common.BackToList</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
