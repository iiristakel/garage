@model WebApp.Areas.Admin.ViewModels.AppUserInPositionCreateEditViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>@Resources.Views.Common.CreateNew</h1>

<h4>@Resources.Domain.AppUserInPosition.AppUserInPositionString</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            Worker: @Model.AppUser.FirstLastName

            <div asp-validation-summary="All" class="text-danger"></div>

            <input type="hidden" asp-for="AppUserInPosition.AppUserId" value="@Model.AppUser.Id"/>

            <div class="form-group">
                <label asp-for="AppUserInPosition.AppUserPositionId" class="control-label">
                    @Resources.Domain.AppUserInPosition.AppUserPosition
                </label>
                <select asp-for="AppUserInPosition.AppUserPositionId" class="form-control" 
                        asp-items="Model.AppUserPositionSelectList"></select>
            </div>
            <div class="form-group">
                <label asp-for="AppUserInPosition.From" class="control-label"></label>
                <input asp-for="AppUserInPosition.From" class="form-control"/>
                <span asp-validation-for="AppUserInPosition.From" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppUserInPosition.Until" class="control-label"></label>
                <input asp-for="AppUserInPosition.Until" class="form-control"/>
                <span asp-validation-for="AppUserInPosition.Until" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Resources.Views.Common.Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Resources.Views.Common.BackToList</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
