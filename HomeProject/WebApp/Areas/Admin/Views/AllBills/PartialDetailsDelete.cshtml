@model WebApp.Areas.Admin.ViewModels.BillCreateEditViewModel

<h4>@Resources.Domain.Bill.BillString</h4>
<hr/>
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Bill.DateTime)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Bill.DateTime)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Bill.InvoiceNr)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Bill.InvoiceNr)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Bill.Client)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Bill.Client.CompanyName)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Bill.WorkObject)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Bill.WorkObject.Client.CompanyAndAddress)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Bill.ArrivalFee)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Bill.ArrivalFee)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Bill.BillLines)
        (
        <a asp-action="Create"
           asp-controller="AllBillLines" asp-route-billId="@Model.Bill.Id">
            Add
        </a>)
    </dt>
    <table class="table">
    <dd class="col-sm-10">
        <ul>
            @if (Model.Bill.BillLines.Count > 0)
            {
                <dt>
                    <th>
                        @Resources.Domain.BillLine.Product
                    </th>
                    <th>
                        @Resources.Domain.BillLine.Sum
                    </th>
                    <th>
                        @Resources.Domain.BillLine.Amount
                    </th>
                    <th>
                        @Resources.Domain.BillLine.DiscountPercent
                    </th>
                    <th>
                        @Resources.Domain.BillLine.SumWithDiscount
                    </th>
                    <th></th>
                </dt>
            }
            @foreach (var billLine in Model.Bill.BillLines)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => billLine.Product)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => billLine.Sum)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => billLine.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => billLine.DiscountPercent)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => billLine.SumWithDiscount)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-controller="AllBillLines" asp-route-id="@billLine.Id">@Resources.Views.Common.Edit</a> |
                        <a asp-action="Details" asp-controller="AllBillLines" asp-route-id="@billLine.Id">@Resources.Views.Common.Details</a> |
                        <a asp-action="Delete" asp-controller="AllBillLines" asp-route-id="@billLine.Id">@Resources.Views.Common.Delete</a>
                    </td>
                </tr>
            }
        </ul>
    </dd>
    </table>
    <dt class="col-sm-10 text-right">
        @Html.DisplayNameFor(model => model.Bill.SumWithoutTaxes)
    </dt>
    <dd class="col-sm-2">
        @Html.DisplayFor(model => model.Bill.SumWithoutTaxes)
    </dd>
    <dt class="col-sm-10 text-right">
        @Html.DisplayNameFor(model => model.Bill.TaxPercent)
    </dt>
    <dd class="col-sm-2">
        @Html.DisplayFor(model => model.Bill.TaxPercent)
    </dd>
    <dt class="col-sm-10 text-right">
        @Html.DisplayNameFor(model => model.Bill.FinalSum)
    </dt>
    <dd class="col-sm-2">
        @Html.DisplayFor(model => model.Bill.FinalSum)
    </dd>
    <dt class="col-sm-10 text-right">
        @Html.DisplayNameFor(model => model.Bill.Comment)
    </dt>
    <dd class="col-sm-2">
        @Html.DisplayFor(model => model.Bill.Comment)
    </dd>
</dl>