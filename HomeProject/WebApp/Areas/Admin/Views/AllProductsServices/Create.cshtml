@model WebApp.Areas.Admin.ViewModels.ProductServiceCreateEditViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>@Resources.Views.Common.CreateNew</h1>

<h4>ProductService</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductService.WorkObjectId" class="control-label">
                    @Resources.Domain.WorkObject.WorkObjectString
                </label>
                <select asp-for="ProductService.WorkObjectId" class="form-control" 
                        asp-items="Model.WorkObjectSelectList"></select>
                <span asp-validation-for="ProductService.WorkObjectId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductService.ProductForClientId" class="control-label">
                    @Resources.Domain.ProductForClient.ProductForClientString
                </label>
                <select asp-for="ProductService.ProductForClientId" class="form-control" 
                        asp-items="Model.ProductForClientSelectList"></select>
                <span asp-validation-for="ProductService.ProductForClientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductService.Description" class="control-label"></label>
                <input asp-for="ProductService.Description" class="form-control"/>
                <span asp-validation-for="ProductService.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="@Resources.Views.Common.Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Resources.Views.Common.BackToList</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}