@model WebApp.Areas.Admin.ViewModels.ProductsForClientsCreateEditViewModel
@{
    ViewBag.Title = "Add product";
    Layout = "_Layout";
}
<h4>Product</h4>
<h6>Client: @ViewBag.ProductForClient.Client</h6>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChooseForWorkObject">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductForClient.ProductId" class="control-label">@Resources.Domain.Product.ProductString</label>
                <select asp-for="ProductForClient.ProductId" class="form-control" asp-items="Model.ProductSelectList"></select>
                <span asp-validation-for="ProductForClient.ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductForClient.Count" class="control-label"></label>
                <input asp-for="ProductForClient.Count" class="form-control"/>
                <span asp-validation-for="ProductForClient.Count" class="text-danger"></span>
            </div>
            
            @* <input type="hidden" asp-for="ProductForClient.WorkObjectId" value="@ViewBag.ProductForClient.WorkObjectId"/> *@
            <input type="hidden" asp-for="ProductForClient.ClientId" value="@ViewBag.ProductForClient.ClientId"/>

            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}